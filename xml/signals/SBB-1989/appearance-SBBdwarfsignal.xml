<aspecttable>SBB-1989</aspecttable>
  <name>Dwarf signal</name>
  <reference>as per SBB 1989 rules</reference>
  <description>Appearances for a shunting dwarf signal</description>

  <appearances>

    <appearance>
      <aspectname>Halt</aspectname>
      <show>red</show>
      <reference />
      <comment>Stop</comment>
      <imagelink type="vertical">../../../resources/icons/SBBSignals/Zwergsignale/SBBvdwarfHalt.gif</imagelink>
      <imagelink type="left">../../../resources/icons/SBBSignals/Zwergsignale/SBBldwarfHalt.gif</imagelink>
      <imagelink type="left Layout Editor">../../../resources/icons/SBBSignals/Zwergsignale/SBBldwarfHalt.gif</imagelink>
      <imagelink type="right">../../../resources/icons/SBBSignals/Zwergsignale/SBBrdwarfHalt.gif</imagelink>
      <imagelink type="right Layout Editor">../../../resources/icons/SBBSignals/Zwergsignale/SBBrdwarfHalt.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Vorsicht</aspectname>
      <show>yellow</show>
      <reference />
      <comment>Stop at the next dwarf signal</comment>
      <imagelink type="vertical">../../../resources/icons/SBBSignals/Zwergsignale/SBBvdwarfVorsicht.gif</imagelink>
      <imagelink type="left">../../../resources/icons/SBBSignals/Zwergsignale/SBBldwarfVorsicht.gif</imagelink>
      <imagelink type="left Layout Editor">../../../resources/icons/SBBSignals/Zwergsignale/SBBldwarfVorsicht.gif</imagelink>
      <imagelink type="right">../../../resources/icons/SBBSignals/Zwergsignale/SBBrdwarfVorsicht.gif</imagelink>
      <imagelink type="right Layout Editor">../../../resources/icons/SBBSignals/Zwergsignale/SBBrdwarfVorsicht.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Fahrt</aspectname>
      <show>green</show>
      <reference />
      <comment>Shunting speed</comment>
      <imagelink type="vertical">../../../resources/icons/SBBSignals/Zwergsignale/SBBvdwarfFahrt.gif</imagelink>
      <imagelink type="left">../../../resources/icons/SBBSignals/Zwergsignale/SBBldwarfFahrt.gif</imagelink>
      <imagelink type="left Layout Editor">../../../resources/icons/SBBSignals/Zwergsignale/SBBldwarfFahrt.gif</imagelink>
      <imagelink type="right">../../../resources/icons/SBBSignals/Zwergsignale/SBBrdwarfFahrt.gif</imagelink>
      <imagelink type="right Layout Editor">../../../resources/icons/SBBSignals/Zwergsignale/SBBrdwarfFahrt.gif</imagelink>
    </appearance>  

  </appearances>

  <specificappearances>
    <danger>
      <aspect>Halt</aspect>
    </danger>
  </specificappearances>

