  <aspects>

    <aspect>
        <name>Spento</name>
        <indication>Stop</indication>
	  <description>no light</description>
	  <comment>Fermata</comment>
        <speed>Stop</speed>
        <speed2>Stop</speed2>
    </aspect>   

    <aspect>
        <name>Rosso</name>
        <indication>Stop</indication>
	  <description>One red light</description>
	  <description>shunting movements are allowed by dwarf signals</description>
	  <comment>Fermata</comment>
        <speed>Stop</speed>
        <speed2>Stop</speed2>
    </aspect>

    <aspect>
        <name>Rosso lamp</name>
        <indication>Approach</indication>
	  <description>One blinking red light</description>
	  <description>Proceed at 20km/h</description>
	  <comment>next signal is red</comment>
        <speed>RestrictedSlow</speed>
        <speed2>RestrictedSlow</speed2>
    </aspect>
    
    <aspect>
      <name>Arancione</name>
      <indication>Expect stop, prepare to stop at next main signal</indication>
	  <description>One orange light</description>
	  <description>if no speed limit is shown, next signal is red</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Arancione 40km/h</name>
      <indication>Proceed at 40km/h from next signal</indication>
	  <description>One orange light with next speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Arancione 60km/h</name>
      <indication>Proceed at 60km/h from next signal</indication>
	  <description>One orange light with next speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>
    
    <aspect>
      <name>Arancione 70km/h</name>
      <indication>Proceed at 70km/h from next signal</indication>
	  <description>One orange light with next speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Arancione 90km/h</name>
      <indication>Proceed at 90km/h from next signal</indication>
	  <description>One orange light with next speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Entrata corta</name>
      <indication>Proceed at max. 40km/h, next signal is red and the block is short</indication>
	  <description>One orange light with blinking horizontal stripe</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Entrata su bin. parz. occ.</name>
      <indication>Proceed at max. 40km/h, next signal is red and the block is partially occupied</indication>
	  <description>One orange light with horizontal stripe</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Preavvertimento</name>
      <indication>Proceed carefully, blocks are short and the signal after the next signal is red</indication>
	  <description>One orange light with bottom oriented arrow</description>
	  <comment>segnale aperto</comment>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
    </aspect>

    <aspect>
      <name>Verde</name>
      <indication>Proceed, line clear (with timetable speed)</indication>
	  <description>One green light</description>
	  <comment>segnale aperto</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Verde 40km/h</name>
      <indication>Proceed at 40km/h from next signal</indication>
	  <description>One green light with speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Verde 60km/h</name>
      <indication>Proceed at 60km/h from next signal</indication>
	  <description>One green light with speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>
    
    <aspect>
      <name>Verde 70km/h</name>
      <indication>Proceed at 70km/h from next signal</indication>
	  <description>One green light with speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Verde 90km/h</name>
      <indication>Proceed at 90km/h from next signal</indication>
	  <description>One green light with speed limit</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Halt</name>
      <indication>Stop</indication>
	  <description>two horizontal white lights</description>
	  <comment>segnale aperto</comment>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
    </aspect>
    
    <aspect>
      <name>Vorsicht</name>
      <indication>Proceed slowly</indication>
	  <description>two askew white lights</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

    <aspect>
      <name>Fahrt</name>
      <indication>Libero passaggio</indication>
	  <description>two horizontal white lights</description>
	  <comment>segnale aperto</comment>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
    </aspect>

  </aspects> 

  <imagetypes>
    <imagetype type="vertical" />
    <imagetype type="vertical Layout Editor" />
    <imagetype type="left" />
    <imagetype type="right" />
    <imagetype type="left Layout Editor" />
    <imagetype type="right Layout Editor" />
  </imagetypes>

  <appearancefiles>   
    <appearancefile href="appearance-SBBdwarfsignal.xml"/>
    <appearancefile href="appearance-SBBroundhead.xml"/>
    <appearancefile href="appearance-SBBroundheadspeed.xml"/>
    <appearancefile href="appearance-SBBsquaredhead.xml"/>
    <appearancefile href="appearance-SBBsquaredheadspeed.xml"/>
  </appearancefiles>

</aspecttable>
